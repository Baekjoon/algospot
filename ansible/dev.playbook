# vim: set expandtab ts=2 sw=2 filetype=yaml:
---
- hosts: all
  vars:
    home_dir: /vagrant
    django_dir: /vagrant/www
    user: vagrant
  remote_user: vagrant
  tasks:
  - name: install linux-image-extra (needed for aufs)
    shell: apt-get install -y linux-image-extra-`uname -r`
    sudo: yes
  - include: single_box.yml
